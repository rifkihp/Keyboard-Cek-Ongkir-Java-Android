<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">@dimen/editTextFont</item>
        <item name="android:textColor">@color/colorEditTextFont</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0000</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:background">@drawable/shipping_button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/editTextFont</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
